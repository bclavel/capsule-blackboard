  <body id="page-top">

    <%- include('header') %>

    <div id="wrapper">

      <%- include('sidebar') %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <div class="card mb-3">
            <div class="card-header">
            <i class="fas fa-chart-pie"></i>
             Nombre d'inscrits par mois </div>
            <div class="card-body">
              <canvas id="userCountByMonth" data-chartviz='<%= JSON.stringify(userPerMonth) %>'></canvas>
            </div>
          </div>

          <div class="card mb-3">
            <div class="card-header">
            <i class="fas fa-chart-pie"></i>
             Panier moyen de commandes par mois </div>
            <div class="card-body">
              <canvas id="ordersAvgByMonth" data-chartviz='<%= JSON.stringify(avgOrderPerMonth) %>'></canvas>
            </div>
          </div>

          <div class="card mb-3">
            <div class="card-header">
            <i class="fas fa-chart-pie"></i>
             Nombre de commandes par jour </div>
            <div class="card-body">
              <canvas id="ordersByDay" data-chartviz='<%= JSON.stringify(numberTotalOrderPerDay) %>'></canvas>
            </div>
          </div>

          <div class="card mb-3">
            <div class="card-header">
            <i class="fas fa-chart-pie"></i>
             repartition des inscrits par sexe  </div>
            <div class="card-body">
              <canvas id="userCountByGender" data-chartviz='<%= JSON.stringify(userPerGender) %>'></canvas>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright Â© Paris Saint-Germain</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
